datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

model Review {
  id          Int      @id
  listingName String
  guestName   String
  content     String?
  rating      Float?
  categories  Json
  submittedAt DateTime
  type        String
  isPublic    Boolean  @default(false)

  @@index([isPublic, submittedAt])
  @@index([rating])
  @@map("reviews")
}
